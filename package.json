{
  "name": "cartography",
  "version": "1.0.0",
  "description": "On chain asset discovery",
  "license": "MIT",
  "author": "defi.org",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/defi-org-code/cartography.git"
  },
  "bugs": {
    "url": "https://github.com/defi-org-code/cartography/issues"
  },
  "homepage": "https://github.com/defi-org-code/cartography#readme",
  "main": "dist/index.js",
  "dependencies": {
    "@defi.org/web3-candies": "1.x",
    "serverless-step-functions": "2.x",
    "@types/ioredis": "4.x",
    "ioredis": "4.x",
    "ethereum-block-by-date": "1.x"
  },
  "devDependencies": {
    "@vercel/ncc": "0.x",
    "serverless": "2.x"
  },
  "scripts": {
    "prettier": "prettier --write '{contracts,src,test}/**/*.{ts,js,json,sol}'",
    "prebuild": "rm -rf dist && npm run prettier",
    "build": "ncc build ./src/main.ts --target=es5",
    "test": "env TS_NODE_COMPILER_OPTIONS='{ \"module\": \"commonjs\" }' mocha -r ts-node/register 'test/**/*.ts' --timeout 120000",
    "dev": "env TS_NODE_COMPILER_OPTIONS='{ \"module\": \"commonjs\" }' ts-node -e 'require(`./test/dev`).dev().then(console.dir).catch(console.error)'",
    "indexerBSC": "node -e \"require('./dist/index.js').indexerBSC().then(console.dir).catch(console.error)\"",
    "info": "node -e \"require('./dist/index.js').info().then(console.dir).catch(console.error)\"",
    "transfers": "node -e \"require('./dist/index.js').transfers({pathParameters:{network:process.argv[1], token:process.argv[2]}}).then(console.dir).catch(console.error)\"",
    "serverless-package": "REPO_SECRETS_JSON='{}' GITHUB_REPO_NAME='repo' AWS_STORAGE_ARN='arn:aws:elasticfilesystem:us-e-2:123456789012:access-point/fsap-12345678901234567' AWS_STORAGE_SG='sg' AWS_STORAGE_SUBNET='subnet' npx serverless package"
  },
  "prettier": {
    "printWidth": 120
  }
}
